<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appdatvexemphim">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="false">
        <activity android:name=".Activity.PasswordChangeActivity"></activity>
        <activity android:name=".Activity.ForgotPasswordActivity" />
        <activity android:name=".Activity.UpdateUserActivity" />
        <activity android:name=".Activity.PaymentActivity" />
        <activity android:name=".Activity.DetailTickerActivity" />
        <activity android:name=".Activity.SelectSeatActivity" />
        <activity
            android:name=".Activity.ChooseSessionActivity"
            android:windowSoftInputMode="adjustUnspecified" />
        <activity android:name=".Activity.DetalsMovieActivity" />
        <activity
            android:name=".Activity.CreateAccountActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activity.HomeActivity"
            android:windowSoftInputMode="adjustUnspecified" />
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>