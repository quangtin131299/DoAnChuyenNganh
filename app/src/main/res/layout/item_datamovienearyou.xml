<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:paddingRight="5dp"
    android:background="@drawable/background_cinemanearyou"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:maxWidth="195dp"
        android:maxHeight="330dp"
        android:layout_width="155dp"
        android:layout_height="290dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_cinemanearyou"
            android:orientation="vertical"
            android:weightSum="10">


            <ImageView
                android:id="@+id/imgphim"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:scaleType="fitXY"
                android:src="@drawable/mask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/colorBackround"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txttenphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃªn phim"
                    android:textColor="#E7E7E7"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtthoigian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="131 min"
                    android:textColor="#707070"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>